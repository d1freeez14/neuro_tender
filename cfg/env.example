# Пример файла переменных окружения для Neuro Tender
# Скопируйте этот файл в .env и заполните реальными значениями

# Учетные данные для Documentolog
DOCUMENTOLOG_USERNAME=documentolog
DOCUMENTOLOG_PASSWORD=your_password_here
DOCUMENTOLOG_URL=https://portal.documentolog.kz/webservice/json/create_tented

# Настройки загрузки
DOCUMENTOLOG_TIMEOUT=30
DOCUMENTOLOG_MAX_RETRIES=3
DOCUMENTOLOG_BACKOFF_FACTOR=0.3

# Настройки модели
MODEL_NAME=llama3:8b-instruct-q5_K_M
MODEL_BASE_URL=http://dgollama:11434
MODEL_TEMPERATURE=0.1
MODEL_MAX_TOKENS=1000
MODEL_TIMEOUT=30

# Настройки парсинга
SCRAPING_COUNT_RECORD=2000
SCRAPING_FINANCIAL_YEAR=2025
SCRAPING_AMOUNT_FROM=100000
SCRAPING_REQUEST_DELAY=2.0
SCRAPING_MAX_RETRIES=3
SCRAPING_RETRY_DELAY=5.0

# Настройки документов
DOCUMENT_CHUNK_SIZE=3000
DOCUMENT_MAX_CHUNKS=5
DOCUMENT_KEYWORD_THRESHOLD=2

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s [%(levelname)s] %(name)s: %(message)s
